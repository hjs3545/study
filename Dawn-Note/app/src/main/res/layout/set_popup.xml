<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background_round"
        android:layout_gravity="center"
        android:layout_width="500dp"
        android:layout_height="500dp">

    <TextView
            android:text="기본 태깅 방법 설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView17"
            android:textSize="18sp" android:textColor="@color/white"
            android:fontFamily="@font/korean"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.050000012" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/highlight"
            android:background="@drawable/highlight"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/underscore"
            app:layout_constraintHorizontal_bias="0.475" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/underscore"
            android:background="@drawable/underscore"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/circle"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/underscore"
            app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintVertical_bias="0.0"/>
    <View
            android:id="@+id/view3"
            android:layout_width="470dp"
            android:layout_height="2px"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/underscore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"/>

    <TextView
            android:text="중요도 확인 방법 설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            android:textSize="20sp" android:textColor="@color/white"
            android:fontFamily="@font/korean"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:layout_width="140dp"
            android:layout_height="180dp" android:id="@+id/star"
            android:background="@drawable/star"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/overlap"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintVertical_bias="0.0"
    />
    <Button
            android:layout_width="140dp"
            android:layout_height="180dp" android:id="@+id/overlap"
            android:background="@drawable/overlap"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="180dp" android:id="@+id/color"
            android:background="@drawable/color"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/overlap"
    />
</androidx.constraintlayout.widget.ConstraintLayout>