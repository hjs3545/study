<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="984dp"
        android:background="@drawable/main_background">

        <Button
                android:id="@+id/tag_list_switch"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="121dp"
                android:layout_height="68dp"
                android:layout_marginTop="10dp"
                android:drawableTop="@drawable/tag_toggle"
                app:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/javatext"
            android:text="Note"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/tag_list_switch"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/javatext"
            android:text="Tag"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/tag_list_switch"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="255dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:fontFamily="@font/javatext"
            android:text="@string/DawnNote"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <ImageView
                android:layout_width="50dp"
                android:layout_height="49dp"
                app:srcCompat="@drawable/moon"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintVertical_bias="0.032"/>

        <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/detective" android:id="@+id/tag_list_search"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.933"
                app:layout_constraintVertical_bias="0.037"/>

        <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="599dp"
                android:layout_height="740dp"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tag_list_switch"
                app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tag_ds_07"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_ds_03"
                        android:text="자료구조 07, 08"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.068"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tag_ds_00"/>
                <Button
                        android:id="@+id/tag_probability_03"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_pb_03"
                        android:text="확률 및 통계 03"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tag_probability_02"
                        app:layout_constraintTop_toBottomOf="@+id/tag_c_03"/>

                <Button
                        android:id="@+id/tag_probability_02"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_pb_02"
                        android:text="확률 및 통계 02"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tag_c_02"/>

                <Button
                        android:id="@+id/tag_probability_01"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_pb_01"
                        android:text="확률 및 통계 01"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toStartOf="@+id/tag_probability_02"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tag_c_01"/>

                <Button
                        android:id="@+id/tag_c_03"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/tag_c_03"
                        android:text="C언어 03"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tag_c_02"
                        app:layout_constraintTop_toTopOf="parent"/>

                <Button
                        android:id="@+id/tag_c_02"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/tag_c_02"
                        android:text="C언어 02"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <Button
                        android:id="@+id/tag_c_01"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/tag_c_01"
                        android:text="C언어 01"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toStartOf="@+id/tag_c_02"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <Button
                        android:id="@+id/tag_ds_05"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_ds_03"
                        android:text="자료구조 05, 06"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tag_ds_04"
                        app:layout_constraintTop_toBottomOf="@+id/tag_probability_03"/>

                <Button
                        android:id="@+id/tag_ds_04"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_ds_02"
                        android:text="자료구조 04"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.501"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tag_probability_02"/>

                <Button
                        android:id="@+id/tag_ds_00"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawableTop="@drawable/tag_list_ds_01"
                        android:text="자료구조 정리"
                        android:drawablePadding="8dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toStartOf="@+id/tag_ds_04"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tag_probability_01"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>