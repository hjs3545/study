<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".c_note03">

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
        <ImageView
                android:layout_width="match_parent"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" app:srcCompat="@drawable/c_program03"
                android:id="@+id/prob_img01"/>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="600dp"
            android:layout_height="134dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/toolbar" android:id="@+id/constraintLayout">

        <TextView
                android:text="C 언어 03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textColor="#FFFFFF" android:textSize="34sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="192dp"
                android:layout_marginStart="192dp" android:layout_marginEnd="192dp" android:layout_marginRight="192dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="72dp"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/back_button"
                android:background="@drawable/back"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:scaleType="centerCrop"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/eraser_but"
                android:background="@drawable/icon_eraser"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/hpen_but" app:layout_constraintEnd_toStartOf="@+id/text_but"
        />
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/text_but"
                android:background="@drawable/icon_text"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/eraser_but" app:layout_constraintEnd_toStartOf="@+id/pal_but"
        />
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/select_but"
                android:background="@drawable/icon_select"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/pal_but" app:layout_constraintEnd_toStartOf="@+id/select_but3"
        />
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/select_but3"
                android:background="@drawable/icon_re"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/select_but"
                app:layout_constraintEnd_toStartOf="@+id/select_but4"
                tools:srcCompat="@color/cardview_shadow_end_color" android:tint="@color/cardview_shadow_end_color"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/select_but4"
                android:background="@drawable/icon_f"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/select_but3"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/pal_but"
                android:background="@drawable/icon_pal"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/text_but" app:layout_constraintEnd_toStartOf="@+id/select_but"
        />
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/hpen_but"
                android:background="@drawable/icon_hpen"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/pen_but" app:layout_constraintEnd_toStartOf="@+id/eraser_but"
        />
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="39dp" app:srcCompat="@color/cardview_shadow_end_color"
                android:id="@+id/pen_but"
                android:background="@drawable/icon_pen"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hpen_but"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>